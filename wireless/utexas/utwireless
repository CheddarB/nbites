BASE_WLAN0_IP="192.168.${TEAM_NUM}."
GATEWAY="192.168.0.1"
#BASE_WLAN0_IP="139.140.218."
ROBOT_ID="${ID}"

depend() {
  need dbus
}

start() {
  ifconfig wlan0 up
  wpa_supplicant -iwlan0 -Dwext -c/etc/wpa_supplicant.conf -B
  sleep 1
  ifconfig wlan0 "${BASE_WLAN0_IP}${ROBOT_ID}" netmask 255.255.0.0
  route add -net default gw "${GATEWAY}"
}

stop() {
  killall wpa_supplicant
  ifconfig wlan0 down
}

restart() {
  stop
  sleep 2
  start
}
